  <% if @user.errors.any? %>
      <h3><%= @user.errors.count %>errors prohibited this book from being saved:</h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
      <% end %>

<p id="notice"></p>
<div class="container">
  <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model:@user, local:true do |f| %>
    <div class="form-group">
      <label class="inputName">Name</label>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name",class:"form-control"%>
    </div>
    <div class="form-group">
      <label class="inputImage">Image</label>
    <%= f.attachment_field :profile_image,class:"form-control-file"%>
    </div>
    <div class="form-group">
      <label class="inputIntroduction">Introduction</label>
    <%= f.text_field :introduction, autofocus: true, id:"introduction",class:"form-control"%>
    </div>
    <div class="form-group">
    <%= f.submit "Update User",class: "btn btn-secondary" %>
    </div>
    <% end %>
   </div>
  </div>
</div>