<script src="https://kit.fontawesome.com/c554defd4c.js" crossorigin="anonymous"></script>

  <div class="col-md-3">
    <h2>User info</h2>
     <%= attachment_image_tag @user_current, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
       <tbody>
        <tr></tr>
        <tr>
         <th>name</th>
         <th class="profile-name"><%= @user_current.name %></th>
        </tr>
        <tr>
         <th>introduction</th>
         <th class="introduction"><%= @user_current.introduction %></th>
        </tr>
       </tbody>
      </table>
      <div class="row">
       <%= link_to "",edit_user_path(@user_current) ,class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
      </div>
      <h2 class="mt-3">New book</h2>
       <%= form_with model: @book_new, local:true do |f| %>
      <div class="form-group">
       <label class="form">Title</label>
        <%= f.text_field :title,class:"form-control"%>
       </div>
       <div class="form-group">
       <label class="form">Opinion</label>
        <%= f.text_field :body,class:"form-control" %>
       </div>
       <div class="form-group">
        <%= f.submit 'Create Book',class: "btn btn-success" %>
       </div>
<% end %>
   </div>